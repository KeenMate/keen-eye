{
  "manifest_version": 2,
  "name": "keen-eye",
  "description": "header explorer",
  "version": "0.0.1",
  "background": {
    "scripts": ["/background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["/content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/*",
    "https://*/*",
    "tabs",
    "storage"
  ],
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
